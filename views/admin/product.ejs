<%- include('../layouts/main-layout.ejs')  %>

    <main>
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center mt-5">
            <a href="/admin/add-product" class="btn btn-primary btn-lg">Add New</a>

          </div>

        </div>
      <% if( pdts.length > 0 ) { %>
        
          <div class="row">
            
              <% for(let i = 0; i < pdts.length; i++) { %>
                
                <div class="col-md-6 mt-3">
                  <div class="card" style="width: 18rem;">
                    <img src="<%= pdts[i].TP_Image_URL %>" alt="<%= pdts[i].TP_Product_Title %>" class="card-img-top" height="150px" width="50px">
                    <div class="card-body">
                      <h5 class="card-title"><%= pdts[i].TP_Product_Title %></h5>
                      <p class="card-text"><%= pdts[i].TP_Product_Description %></p>
                      <p class="card-text"><span>â‚¹ </span> <%= pdts[i].TP_Product_Price %></p>
                      <a href="/admin/edit-product/<%= pdts[i].TP_ProductId %>" class="btn border border-primary text-primary">Edit</a> &nbsp;
                      <form method="POST" action="/admin/delete-product">
                        <input type="hidden" value="<%= pdts[i].TP_ProductId %>" id="productId" name="productId">
                        <button class="btn border border-danger text-danger">Delete</button>
                      </form>
                      
                    </div>
                  </div>
              </div>
                <% } %>
          </div>
        
      <% } else {%>
        <div class="row">
          <div class="col-md-12">
            No Product Found
          </div>
        </div>
      <%  } %>
    </div>

        
      

    </main>


<%- include('../layouts/footer.ejs') %>