<%- include('../layouts/main-layout.ejs')  %>

    <main>
      <div class="container">
      <% if( pdts.length > 0 ) { %>
        
          <div class="row">
            
              <% for(let i = 0; i < pdts.length; i++) { %>
                
                <div class="col-md-6 mt-3">
                  <div class="card" style="width: 18rem;">
                    <img src="<%= pdts[i].TP_Image_URL %>" alt="<%= pdts[i].TP_Product_Title %>" class="card-img-top" height="150px" width="50px">
                    <div class="card-body">
                      <h5 class="card-title"><%= pdts[i].TP_Product_Title %></h5>
                      <p class="card-text"><%= pdts[i].TP_Product_Description %></p>
                      <p class="card-text">â‚¹ <%= pdts[i].TP_Product_Price %></p>
                      <a href="/shop/product-detail/<%= pdts[i].TP_ProductId %>" class="btn border border-secondary">Details</a>
                      <form method="POST" action="/shop/addToCart">
                          <button class="btn border border-primary text-primary">Add to Cart</a>
                          <input type="hidden" name="productId" id="productId" value="<%= pdts[i].TP_ProductId %>">
                      </form>
                      
                    </div>
                  </div>
              </div>
                <% } %>
          </div>
        
      <% } else {%>
        <div class="row">
          <div class="col-md-12">
            No Product Found
          </div>
        </div>
      <%  } %>
    </div>

        
      

    </main>


